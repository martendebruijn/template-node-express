{
  "name": "template-node-express",
  "version": "1.0.0",
  "description": "Template repo for NodeJS with Express",
  "main": "server/app.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node server/app.js",
    "prettier": "npx prettier --write .",
    "lint:es": "npx eslint server/src/js/*.js",
    "lint:css": "npx stylelint server/src/css/*.css",
    "lint": "npm run lint:es && npm run lint:css",
    "build:es": "npm run lint:es && cat server/src/js/*.js > server/public/dist/all.js && terser server/public/dist/all.js -o server/public/dist/all.js",
    "build:css": "npm run lint:css && cat server/src/css/predence/reset.css server/src/css/*.css > server/public/dist/all.css && npx postcss server/public/dist/all.css -o server/public/dist/all.css",
    "build": "npm run build:es && npm run build:css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/martendebruijn/template-node-express.git"
  },
  "keywords": [
    "nodejs",
    "template",
    "express"
  ],
  "author": "Marten de Bruijn",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/martendebruijn/template-node-express/issues"
  },
  "homepage": "https://github.com/martendebruijn/template-node-express#readme",
  "browserslist": "last 2 versions, iOS >= 8",
  "dependencies": {
    "compression": "^1.7.4",
    "dotenv": "^8.2.0",
    "ejs": "^3.1.3",
    "express": "^4.17.1",
    "node-fetch": "^2.6.1",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "autoprefixer": "^10.2.5",
    "chokidar": "^3.5.1",
    "cssnano": "^5.0.2",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "nodemon": "^2.0.6",
    "postcss": "^8.2.15",
    "postcss-cli": "^8.3.1",
    "postcss-sorting": "^6.0.0",
    "prettier": "^2.3.0",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0"
  }
}
